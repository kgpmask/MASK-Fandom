{% extends "_base.njk" %}

{% set thispage = 'signup' %}
{% set pagetitle = 'Signup' %}

{% block pagecontent %}

	<div class = "form-container">
		<form action = '/' method = 'post' id = "signup">
			<div id = "page1">
				<h3>Signup Here</h3>
				<input type= "text" placeholder = "display name" id = "display-name">
				<input type="text" placeholder="Username" id="username">
				<input type="email" placeholder="E-mail adress" id="email"><br>
				<button id = "get-pics" onclick = "show()">Upload a Profile Picture</button>
				
				<div id = "images" style = "display:none;">
					<img src = "../assets/members/22_jai.webp" class = "profile-picture" >
					<img src = "../assets/members/22_ankan.webp" class = "profile-picture">
					<img src = "../assets/members/21_vidunram.webp" class = "profile-picture">
					<img src = "../assets/members/22_sahil.webp" class = "profile-picture">
					<img src = "../assets/members/22_snehansh.webp" class = "profile-picture">
				</div>
				
				<input type = "password" placeholder = "Password" id = "password"> 
				<button id = "nextpage" onclick = "shownextpg()">next</button>
			</div>

			<div id = "page2" style = "display:none;">
				<img src = "../assets/testqr/test.webp" id = "UPI">
				<input type = "text" placeholder = "TransactionID">
				<button id = "prev" onclick = "showprevpg()">previous</button>
				<button id = "submit">submit</button>
			</div>
		</form>
	</div>

{% endblock %}
 
{% block customcss %}
	<style media="screen">
		.form-container{
			margin-top : 43rem;
			margin-bottom : 63rem;
			display : block;
		}
		
		form{
			min-height: auto;
			min-width: 33%;
			background-color: rgba(255,255,255,0.13);
			position: absolute;
			transform: translate(-50%,-50%);
			top: 50%;
			left: 50%;
			border-radius: 10px;
			backdrop-filter: blur(5px);
			border: 2px solid rgba(255,255,255,0.1);
			box-shadow: 0 0 40px rgba(8,7,16,0.6);
			padding: 12px 25px;
		}
		form *{
			font-family:Ubuntu,Roboto,Arial,Open Sans,sans-serif;
			color: #ffffff;
			letter-spacing: 0.5px;
			outline: none;
			border: none;
		}
		form h3{
			font-size: 32px;
			font-weight: 500;
			line-height: 42px;
			text-align: center;
			margin-bottom:35px;
		}

		input{
			height: 50px;
			width: -moz-available;
			width: -webkit-fill-available;
			background-color: rgba(255,255,255,0.07);
			border-radius: 12px;
			padding: 0 20px 4px;
			margin-top: 12px;
			font-size: 17px;

			font-weight: 300;
		}
		.checkboxes{
			display : inline;
		}
		::placeholder{
			color: #e5e5e5;
			font-family:Ubuntu,Roboto,Arial,Open Sans,sans-serif;
			font-size:20px;
		}
		button{
			margin-top: 19px;
			width: 100%;
			background-color: var(--red);
			color: white;
			padding: 15px 0;
			font-size: 18px;
			font-weight: 600;
			border-radius: 12px;
			cursor: pointer;
			display = inline;
		}
		#images{
			padding : 11px 4px 0px 0px;
		}
		.profile-picture:hover{
			transform : scale(1.1);
		}

    </style>	
{% endblock %}



{% block customjs %}
	<script>
		
		function shownextpg(){
			document.getElementById("page1").style.display = "none";
			document.getElementById("page2").style.display = "block";
		}

		function showprevpg(){
			document.getElementById("page2").style.display = "none";
			document.getElementById("page1").style.display = "block";
		}

		function show(){
			document.getElementById("images").style.display = "block";
		}
	</script>
{% endblock %}
