{% extends "_base.njk" %}

{% set thispage = 'logout' %}
{% set pagetitle = 'Logout' %}


{% block pagecontent %}
	<div class="container">
		<h3>Are you sure you want to logout?</h3><br>
		<button id = "logout-btn" onclick = "logout()">Yes</button>&emsp;&emsp;<button id = "no-btn" onclick = "no()">No</button>
	</div>
{% endblock %}

{% block customcss %}
	<style>
	#logout-btn, #no-btn {
		width: 100px;
		height: 30px;
		background-color: var(--gray);
		color: var(--off-white);
		border: 2px solid var(--ghost-gray);
		border-radius: 5px;
		cursor: pointer;
		padding: 5px;
	}
	#logout-btn:hover {
		background-color: var(--middle-gray);
	}
	#no-btn:hover {
		background-color: var(--middle-gray);
	}
	</style>
{% endblock %}

{% block customjs %}
	<script>
		async function logout()=> {
			try{
				const response = await axios.post("/logout");
			}catch(e){
				console.log(e);
			}
		};
		function no() {
			window.location.href = "/";
		};
	</script>
{% endblock %}

{% set scripts = ['https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js'] %}
